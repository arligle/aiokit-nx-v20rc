{
  "compilerOptions": {
    "target": "ES2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "declaration": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@aionx/bootstrap": ["libs/bootstrap/src/index.ts"],
      "@aionx/config": ["libs/config/src/index.ts"],
      "@aionx/nest-typed-config": ["packages/nest-typed-config/src/index.ts"]
    }
  }
}
